{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "eu-central-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "typescript-backend",
          "name": "TypeScript Backend",
          "type": "web",
          "target": { "type": "fargate" },
          "buildType": "nixpacks",
          "ci": {
            "type": "ec2"
          },
          "cpu": 0.5,
          "memory": 1,
          "minInstances": 1,
          "maxInstances": 3,
          "buildCommand": "pnpm migrate:dev && pnpm migrate:deploy && pnpm build",
          "startCommand": "pnpm start",
          "healthCheckPath": "/api/healthcheck",
          "envVariables": {
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "REDIS_URL": {
              "fromService": {
                "id": "redis",
                "value": "connectionString"
              }
            },
            "PORT": 3000,
            "NODE_ENV": "production",
            "CLIENT_SIDE_URL": "https://d3gjk8s525mt9p.cloudfront.net",
            "JWT_SECRET": "Rgi#TzTYC9^wmFqXCAB^$X3!6u#DoYwK",
            "JWT_EXPIRES_IN": "1h",
            "SESSION_EXPIRES_IN": "86400",
            "PASSWORD_RESET_TOKEN_EXPIRES_IN": "3600",
            "SET_PASSWORD_TOKEN_EXPIRES_IN": "3600",
            "SET_SESSION": "0",
            "GOOGLE_CLIENT_ID": "",
            "GOOGLE_CLIENT_SECRET": "",
            "GOOGLE_REDIRECT_URI": ""
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "13",
          "instanceSize": "db.t4g.micro",
          "storage": 20,
          "private": false
        },
        {
          "id": "redis",
          "name": "Redis Cache",
          "type": "elasticache",
          "engine": "redis",
          "engineVersion": "7.1",
          "instanceSize": "cache.t3.micro",
          "private": false
        }
      ]
    }
  ]
}
